<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Edit Address"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/orange_200"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="@color/orange_200" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="-16dp"
        android:layout_marginTop="100dp"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your data into the fields below"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editzipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editsubrb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Suburb"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonaddres"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Save"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/actualizaraddres"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:text="@string/update"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/eliminaraddres"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/delete"
                android:textColor="@color/white" />
        </LinearLayout>

        <ListView
            android:id="@+id/datosaddres"
            android:layout_width="wrap_content"
            android:layout_height="158dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>